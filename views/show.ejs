<%- include("partials/header") %>

<div class="ui main container text segment ">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="item">
        <div class="ui top attached ">
            <img class="ui  rounded centered image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <a href="/blogs/<%= blog._id %>/edit" class="ui green inverted button">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui inverted red button">Delete post</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>