<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header ">
        New Blog
    </div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <input type="text" name="blog[image]" placeholder="Image url">
        </div>
        <div class="field">
            <textarea name="blog[body]" placeholder="Blog contents goes here" required></textarea>
        </div>
        <input class="ui purple inverted big button" type="submit">
    </form>
</div>

