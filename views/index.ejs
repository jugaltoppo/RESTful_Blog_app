<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blog.forEach(function(event){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= event.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= event._id %>"><%= event.title %></a>
                        <div class="meta">
                            <span><%= event.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- event.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui purple basic button" href="/blogs/<%= event._id %>">Read more </a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        
    </div>
    
    <%- include("partials/footer") %>
    
    